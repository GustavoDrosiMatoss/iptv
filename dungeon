    Title = "Speed",
    Default = tostring(speedValue),
    Placeholder = "Enter speed",
    Numeric = true,
    Finished = true, 
    Callback = function(Value)
        speedValue = tonumber(Value) or 16
        updateCharacter() -- Cập nhật nhân vật ngay lập tức khi tốc độ thay đổi
    end
})

-- Nhập lực nhảy
